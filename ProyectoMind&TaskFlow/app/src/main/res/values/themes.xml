<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ProyectoMindTaskFlow" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">#0A3D3B</item>
         <item name="colorPrimaryDark">#115A5A</item>
         <item name="colorButtonNormal">#126A66</item>
        <item name="buttonStyle">@style/ButtonStyle.ProyectoMindTaskFlow</item>
        <item name="android:textViewStyle">@style/textview.ProyectoMindTaskFlow</item>
        <item name="editTextStyle">@style/edittext.ProyectoMindTaskFlow</item>
        <item name="checkboxStyle">@style/cb.ProyectoMindTaskFlow</item>
        <item name="switchStyle">@style/switch.ProyectoMindTaskFlow</item>
        <item name="android:windowBackground">#1E5A5A</item>
    </style>

    <style name="Theme.ProyectoMindTaskFlow" parent="Base.Theme.ProyectoMindTaskFlow" />

    <style name="ButtonStyle.ProyectoMindTaskFlow" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#D1C02F</item>
    </style>

    <style name="textview.ProyectoMindTaskFlow" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#D1C02F</item>
    </style>

    <style name="edittext.ProyectoMindTaskFlow" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#D1C02F</item>
        <item name="android:textColorHint">#AFA128</item>
        <item name="android:background">@drawable/custom_edittext_border</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <style name="cb.ProyectoMindTaskFlow" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">#D1C02F</item>
        <item name="android:button">@drawable/custom_checkbox_selector</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="switch.ProyectoMindTaskFlow" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumb">@drawable/custom_switch_thumb</item>
        <item name="android:track">@drawable/custom_switch_track</item>
    </style>

</resources>