<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Permitir tráfico sin cifrar (HTTP) solo para el dominio específico -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">jacecab.000webhostapp.com</domain>
        <domain includeSubdomains="true">jacecab.000webhost.com</domain>
        <domain includeSubdomains="true">files.000webhost.com</domain>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </domain-config>
</network-security-config>

